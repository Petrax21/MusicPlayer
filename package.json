{
  "name": "music-player",
  "version": "1.0.0",
  "description": "Modern Windows Music Player with privacy focus and beautiful UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "build-simple": "electron-builder --win portable --config electron-builder.json",
    "build-no-sign": "electron-builder --win portable --config electron-builder.json --publish never",
    "build-clean": "electron-builder --win portable --publish never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["electron", "mp3", "player", "music", "desktop"],
  "author": "Misdafa",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.musicplayer.app",
    "productName": "Music Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!build/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "sign": false,
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "${productName}-Portable.exe"
    }
  }
}
